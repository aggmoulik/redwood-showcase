datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Project {
  id          Int      @id @default(autoincrement())
  email       String
  title       String
  website     String
  github_url  String?
  description String
  images      Image[]
  tags        String[]
  slug        String
  userID      User     @relation(fields: [userUserId], references: [userId])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userUserId  Int
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
  status    Boolean
}

model User {
  userId      Int       @id @default(autoincrement())
  emailID     String
  username    String
  profileUrl  String
  lastLoginAt DateTime
  role        Roles
  social      Socials   @relation(fields: [socialId], references: [socialId])
  socialId    Int
  Project     Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Socials {
  socialId Int     @id @default(autoincrement())
  twitter  String?
  github   String?
  linkedin String?
  User     User[]
}

enum Roles {
  Admin
  User
}
